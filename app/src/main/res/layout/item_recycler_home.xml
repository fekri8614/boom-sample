<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="140dp"
    android:layout_margin="@dimen/space_8x"
    app:cardCornerRadius="@dimen/space_16x"
    app:cardElevation="@dimen/space_4x"
    app:strokeColor="@color/yellow_back"
    app:strokeWidth="1dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_recycler_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/imh_bc_test" />

</com.google.android.material.card.MaterialCardView>