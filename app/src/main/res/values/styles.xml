<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="fontFamily">sans-serif-medium</item>

    </style>

    <!--  Customize your PdfViewer here  -->
    <style name="Theme.PdfView.SelectedTheme" parent="@style/Theme.PdfView.Light">

        <item name="android:theme">@style/Theme.PdfView.Light</item>
        <item name="actionBarTheme">@style/Theme.PdfView.Light</item>

    </style>

    <!-- Customize your Toolbar here -->
    <style name="MyToolbar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--- coinbit text style -->
    <style name="CoinBitText" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="CoinBitText.CaptionSmall" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CoinBitText.Caption" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinBitText.CaptionAlternate" parent="CoinBitText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinBitText.Title" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinBitText.Title.Diff" parent="CoinBitText">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinBitText.Title.Light" parent="CoinBitText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinBitText.Title.Borwn" parent="CoinBitText">
        <item name="android:textColor">@color/brown_custom</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinBitText.TitleAlternate" parent="CoinBitText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinBitText.Body" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinBitText.Body.Bold" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinBitText.BodyAlternate" parent="CoinBitText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinBitText.BodyAlternate.Small" parent="CoinBitText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinBitText.BodyTertiary" parent="CoinBitText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinBitText.BodyTertiary.Light" parent="CoinBitText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CoinBitText.BodyTertiary.Brown" parent="CoinBitText">
        <item name="android:textColor">@color/brown_custom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CoinBitText.BodyTertiary.Light.Diff" parent="CoinBitText">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CoinBitText.Body1" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoinBitText.Body1Alternate" parent="CoinBitText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoinBitText.Body2" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CoinBitText.Body3.Light" parent="CoinBitText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoinBitText.Body3.Dark" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoinBitText.Big" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="CoinBitText.Huge" parent="CoinBitText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">42sp</item>
    </style>

</resources>